[user]
	name = Janez Justin

[core]
        editor = vim

[web]
        browser = brave

[color "branch"]
        current = yellow bold
        local = green bold
        remote = cyan bold
        
[color "status"]
        added = green bold
        changed = yellow bold
        untracked = red bold

[alias]
        a = add
        aa = add --all
        ####
        br = branch
	brd = branch -d
        ####
        c = commit
        ca = commit --amend
        cm = commit -m
        ####
        cl = clone
        ####
        co = checkout
        ####
        d = diff
        ####
        f = fetch
        fap = fetch --all --prune
        faprbma = !git stash && git fap && git rebase origin/main && git stash pop
        ####
        ls = ls-files
        ####
        m = merge --ff-only
        ####
        ps = push
        psf = push -f
        ####
        pl = pull
        ####
        rb = rebase
        rba = rebase --abort
        rbc = rebase --continue
        rbi = rebase --interactive
        rbs = rebase --skip
        rbma = !git stash && git rebase origin/main && git stash pop
        ####
        re = reset
        rh = reset HEAD

[url "ssh://git@github.com/"]
        insteadOf = https://github.com/

[commit]
	gpgsign = true

[init]
        defaultBranch = main

[gpg]
	program = gpg
